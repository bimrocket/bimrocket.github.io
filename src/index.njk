<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>BIMROCKET</title>
  <meta http-equiv="refresh" content="3; url=/en/">
  <script>
    (function() {
      const supported = ['en', 'es', 'ca'];

      const lang = (navigator.languages && navigator.languages[0]) ||
         navigator.language || supported[0];

      const short = lang.substring(0, 2).toLowerCase();

      const chosen = supported.includes(short) ? short : supported[0];

      if (!location.pathname.startsWith('/' + chosen + '/'))
      {
        location.replace('/' + chosen + '/');
      }
    })();
  </script>
</head>
<body>
  <p>BIMROCKET</p>
</body>
</html>