<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, interactive-widget=resizes-visual" />
  <title>BIMROCKET | {{ title }}</title>
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <header>
    <div class="logo_div">
      <img src="/img/bimrocket.svg" alt="" class="logo">
      <button class="expand_button">+</button>
    </div>
    
    <nav class="menu hidden">
      <a href="{{ '/' | url }}">Home</a>
      <a href="/features">Features</a>
      <a href="/install">Install</a>
    </nav>
  </header>

  <div class="content">
    <main>
      <div>{{ page.url}}</div>

      {{ content | safe }}
    </main>

    <footer>
      <p>BIMROCKET</p>    
    </footer>
  </div>

<script>
  let menu = document.querySelector(".menu");
  let button = document.querySelector(".expand_button");
  button.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });

</script>

</body>
</html>
